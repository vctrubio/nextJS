{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs", // Changed to commonjs for Node.js compatibility
    "moduleResolution": "node", // Changed to node for better module resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "actions/queries.ts",
    "components/Card.jsx",
    "pages/ShoppingList.jsx",
    "src/tmp.jsx",
    "src/app/admin/page.jsx",
    "scripts/populate.ts",
    "components/CategoryAdmin.jsx",
    "prisma/seed.js" // Added seed.ts to include paths
  ],
  "exclude": ["node_modules"]
}